rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads/writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own user document
    match /users/{userId} {
      // Allow read if user is authenticated and accessing their own document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow update if user is authenticated and updating their own document
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Function to check if a user has the 'admin' role in their user document
    function isAdmin(userId) {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }
  }
}